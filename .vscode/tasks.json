{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start frontend",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/curiosity-coach-frontend"
      },
      "isBackground": true,
      "presentation": {
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "./run.sh",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "presentation": {
        "panel": "new"
      },
      "problemMatcher": [
        "$python"
      ]
    },
    {
      "label": "Start Brain",
      "type": "shell",
      "command": "cd Brain && source venv/bin/activate && pip install -r requirements.txt && uvicorn src.main:app --reload --port 6000",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "presentation": {
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Terminal",
      "type": "shell",
      "command": "zsh",
      "isBackground": false,
      "presentation": {
        "panel": "new"
      }
    },
    {
      "label": "Start All Servers",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Start frontend",
        "Start Backend",
        "Start Brain",
        "Open Terminal"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    }
  ]
} 