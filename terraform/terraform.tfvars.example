# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your actual values

# AWS Configuration
aws_region = "ap-south-1"
aws_profile = "your-aws-profile-name"

# Project Configuration
project_name = "curiosity-coach"
environment = "dev"

# Cloudflare Configuration
cloudflare_email = "your-cloudflare-email@example.com"
cloudflare_api_key = "your-cloudflare-global-api-key-here"
cloudflare_domain_name = "avantifellows.org"
cloudflare_subdomain = "cc"

# SSL Certificate Configuration
acm_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Docker Configuration
docker_image_tag = "latest" 